<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <Spinner
        android:id="@+id/from_dropdown"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:paddingStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="40dp"
        style="@style/EdittextsStyle"

        />
    <Spinner
        android:id="@+id/to_dropdown"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/swap_btn"

        android:textAlignment="viewStart"
        android:gravity="start"
        style="@style/EdittextsStyle"

        android:paddingStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="40dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/swap_btn"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/from_dropdown"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableTop="@drawable/ic_swap"
        android:gravity="center"

        />
    <EditText
        android:id="@+id/from_etxt"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/to_dropdown"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:hint="1"
        android:inputType="number"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/to_etxt"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/to_dropdown"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_10sdp"
        android:hint="xxxxxx"
        android:inputType="number"
        android:gravity="center"
        />



</androidx.constraintlayout.widget.ConstraintLayout>